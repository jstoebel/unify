.row
  .col-xs-12.col-md-4.col-md-offset-4
    .well#checkout-well
      %h2 Checkout
      %p Please enter the 7 digit bottle code from underneath the cap

      = error_messages_for(@donation)
      = simple_form_for @donation do |f|
        = simple_fields_for :bottle_code do |b|
          = b.error_notification
          -# add class has-error if @donation has errors in bottle attr
          = b.input :code, :label => "Bottle Code", hint: "Case sensitive", label_html: {class: "spamspamspam"}
        = f.hidden_field :user_id
        = f.hidden_field :place_id
        = f.input :store, label: 'Store', hint: 'Store where you bought Unify Water', error: false, error_html: { class: 'dummy'}
        = f.button :submit, :class => "btn btn-info btn-block"
